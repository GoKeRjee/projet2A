extends template
block title
  h1 Generate your site
block content
  div.form
    form(onsubmit='submitForm(event)', action='/createSite', method='POST')
      label(for='directory') Directory name:
      input#directory(type='text', name='directory', pattern='[A-Za-z0-9_-]+', placeholder="Example: my_new_site", onfocus="this.placeholder = ''", class='form-control' required)
      br
      label(for='name') Website name:
      input#name(type='text', name='name', placeholder="Example: my new site!", onfocus="this.placeholder = ''", class='form-control' required)
      br
      label(for='port') Port:
      input#port(type='text', name='port', pattern='^([0-9]|[1-9][0-9]{1,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$',  placeholder="Example: 2030", onfocus="this.placeholder = ''", class='form-control' required)
      br
      div.center
        button#button-submit(type='submit') Create
        script. 
          function submitForm(event) {
            alert('Wait a few seconds, your site is being created. This operation may take several seconds.');
          }